    <!-- Quick portfolio view -->
    <section id="portfolio">
        <div class="container">
            <div class="cards">
                <% posts.forEach(post => { %>
                    <article class="card">
                        <h1><%= post.title %></h1>
                        <p class="date"><%= datefns.format(post.createdAt, "MMM y" ) %></p>
                        <img src="https://source.unsplash.com/random" alt="post img" />
                        <p><%= post.snippet %>... <a href="#">read more</a> </p>
                    </article>

                <% }); %>
            </div>
            <div class="btn-wrapper btn-wrapper-center">
                <div class="btn btn-big btn-light">See more</div>
            </div>
        </div>
    </section>
